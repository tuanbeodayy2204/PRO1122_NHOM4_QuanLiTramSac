<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginBottom="8dp">

    <!-- Icon yêu thích -->
    <ImageView
        android:id="@+id/favoriteIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/favorite"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp" />

    <!-- Hình ảnh trạm -->
    <ImageView
        android:id="@+id/stationImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/tram"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp" />

    <!-- Nội dung thông tin trạm -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/distanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5km"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/quantityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng: 4 trụ"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: Hà Giang"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá: 10,000 VND/1h"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Các nút hành động -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="8dp">

        <Button
            android:id="@+id/bookButton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#00b4d8"
            android:text="Đặt trước"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/directionButton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Chỉ đường"
            android:backgroundTint="#0077b6"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>



