<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/paymentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanh toán"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hình thức thanh toán"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Phương thức thanh toán: Tiền mặt -->
    <LinearLayout
        android:id="@+id/cashPaymentOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/tt"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiền mặt"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bankTransferOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ck"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chuyển khoản - Đang phát triển"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

    <!-- Phương thức thanh toán: Visa -->
    <LinearLayout
        android:id="@+id/visaPaymentOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/visa"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visa - Đang phát triển"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

    <TextView
        android:id="@+id/chargeDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loại sạc: Ô tô\nGiá: 8.000 VND/1h\nSố giờ: 3 tiếng\nTổng tiền: 24.000 VND"
        android:layout_marginBottom="16dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/paymentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thanh toán"
        android:backgroundTint="@android:color/holo_green_dark"
        android:textColor="@android:color/white" />
</LinearLayout>
